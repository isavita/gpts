defmodule EvaluateCode do
  def call(code, file_content) do
    try do
      File.write!("test#{Constants.file_ext()}", code |> IO.inspect(label: "code"))
      File.write!("input.txt", file_content) |> IO.inspect()

      # System.cmd(Constants.compiler(), ["test#{Constants.file_ext()}"], stderr_to_stdout: true)
      # |> IO.inspect(label: "compiler")
      # File.cwd!() |> IO.inspect()

      {:ok, {result, exit_status}} =
        RunWithTimeout.call(
          fn ->
            System.cmd(Constants.runtime(), ["run", "-q", "test#{Constants.file_ext()}"],
              stderr_to_stdout: true
            )
            |> IO.inspect(label: "run")
          end,
          30_000
        )
        |> IO.inspect(label: "here")

      if exit_status == 0 do
        {:ok, inspect(result)}
      else
        {:error, inspect(result)}
      end
    rescue
      exception ->
        {:error, Exception.message(exception)}
    end
  end
end
